<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_grey">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_subtitle"
                    style="@style/headerText"
                    android:text="上传照片" />

                <View style="@style/bottom_line" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/choose_pic_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/common_margin10"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/common_margin10"
                    android:layout_marginTop="@dimen/common_margin10"
                    android:overScrollMode="never" />

                <View style="@style/bottom_line" />
            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>


        <Button
            android:id="@+id/choose_pic_save"
            style="@style/sure_button"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/big1_margin20"
            android:text="保存" />

    </FrameLayout>
</layout>