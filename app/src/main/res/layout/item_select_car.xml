<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/big_margin15"
        android:layout_marginRight="@dimen/big_margin15"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_blue_shape">

        <TextView
            android:id="@+id/frame_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:textColor="#6c94f7"
            android:layout_marginLeft="10dp"
            tools:text="JTEBU3FJ8GK110478"
            />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:src="@drawable/delete_icon"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
</layout>