<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/cell_size40"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/number"
                android:textColor="@color/gray_AFAFAF"
                android:textSize="@dimen/text_size17"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="NO.1"/>

            <TextView
                android:id="@+id/instorage"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:text="入库"
                android:gravity="center"
                android:background="@drawable/button_blue_shape"
                android:textColor="@color/blue_6C94F7"
                android:textSize="@dimen/text_size17"
                android:layout_marginRight="@dimen/common_margin10"/>

            <TextView
                android:id="@+id/ined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="已入库"
                android:gravity="center"
                android:textSize="@dimen/text_size17"
                android:textColor="@color/blue_6C94F7"
                android:layout_marginRight="@dimen/common_margin10"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/cell_size40"
            android:orientation="horizontal">

            <TextView
                style="@style/list_left_text"
                android:layout_width="80dp"
                android:text="车架号"
                android:textSize="@dimen/text_size18" />

            <TextView
                android:id="@+id/frame_code"
                style="@style/list_right_text"
                android:textSize="@dimen/text_size18"
                tools:text="车架号" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/cell_size40"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                style="@style/list_left_text"
                android:layout_width="80dp"
                android:text="车辆属性"
                android:textSize="@dimen/text_size18" />

            <TextView
                android:id="@+id/car_attribute"
                style="@style/list_right_text"
                android:textColor="@color/gray_AFAFAF"
                android:textSize="@dimen/text_size18"
                tools:text="宝马" />
        </LinearLayout>

        <View
            style="@style/bottom_line"/>

    </LinearLayout>
</layout>