<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cell_size40"
            android:paddingLeft="@dimen/common_margin10"
            android:gravity="center_vertical"
            android:text="出库资料"
            android:textColor="@color/grey_ACB5B9"
            android:textSize="@dimen/text_size12" />

        <View style="@style/bottom_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/cell_size40"
            android:orientation="horizontal">

            <TextView
                style="@style/list_left_text"
                android:layout_width="80dp"
                android:text="车架号"
                android:textSize="@dimen/text_size13" />

            <TextView
                android:id="@+id/frame_code"
                style="@style/list_right_text"
                android:textSize="@dimen/text_size13"
                tools:text="车架号" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:minHeight="@dimen/cell_size40"
            android:orientation="horizontal">

            <TextView
                style="@style/list_left_text"
                android:layout_width="80dp"
                android:text="车辆属性"
                android:textSize="@dimen/text_size13" />

            <TextView
                android:id="@+id/car_attribute"
                style="@style/list_right_text"
                android:textSize="@dimen/text_size13"
                tools:text="宝马" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fee_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:minHeight="@dimen/cell_size40"
            android:orientation="horizontal">

            <TextView
                style="@style/list_left_text"
                android:layout_width="80dp"
                android:text="仓储费用"
                android:textSize="@dimen/text_size13" />

            <TextView
                android:id="@+id/stroge_fee"
                style="@style/list_right_text"
                android:textSize="@dimen/text_size13"
                android:text="已结清" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/fee_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/storageArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <TextView
                android:id="@+id/totleFee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/black_373737"
                android:textSize="@dimen/text_size12"
                tools:text="共2个仓库 小计：¥ 11000000.00"/>
        </LinearLayout>




    </LinearLayout>
</layout>