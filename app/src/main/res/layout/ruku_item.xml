<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/cell_size40"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/number"
                android:textColor="@color/gray_AFAFAF"
                android:textSize="@dimen/text_size17"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="NO.1"/>

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/right_arrow" />

            <TextView
                android:id="@+id/unstand_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/arrow"
                android:layout_marginRight="5dp"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:padding="3dp"
                android:background="@drawable/button_click_shape"
                tools:text="非标"/>

        </RelativeLayout>

        <View
            style="@style/bottom_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/cell_size40"
            android:orientation="horizontal">

            <TextView
                style="@style/list_left_text"
                android:layout_width="80dp"
                android:text="车架号"
                android:textSize="@dimen/text_size18" />

            <TextView
                android:id="@+id/frame_code"
                style="@style/list_right_text"
                android:textSize="@dimen/text_size18"
                tools:text="车架号" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/cell_size40"
            android:orientation="horizontal">

            <TextView
                style="@style/list_left_text"
                android:layout_width="80dp"
                android:text="车辆属性"
                android:textSize="@dimen/text_size18" />

            <TextView
                android:id="@+id/car_attribute"
                style="@style/list_right_text"
                android:textColor="@color/gray_AFAFAF"
                android:textSize="@dimen/text_size18"
                tools:text="宝马" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/order_code_area"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cell_size40"
            android:orientation="horizontal">

            <TextView
                style="@style/list_left_text"
                android:layout_width="80dp"
                android:text="订单号"
                android:textSize="@dimen/text_size18" />

            <TextView
                android:id="@+id/order_code"
                style="@style/list_right_text"
                android:textColor="@color/blue_6C94F7"
                android:textSize="@dimen/text_size18"
                tools:text="车架号" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/cell_size40"
            android:orientation="horizontal">

            <TextView
                style="@style/list_left_text"
                android:layout_width="80dp"
                android:text="客户"
                android:textSize="@dimen/text_size18" />

            <TextView
                android:id="@+id/client"
                style="@style/list_right_text"
                android:textColor="@color/gray_AFAFAF"
                android:textSize="@dimen/text_size18"
                tools:text="宝马" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/cell_size40"
            android:orientation="horizontal">

            <TextView
                style="@style/list_left_text"
                android:layout_width="80dp"
                android:text="业务员"
                android:textSize="@dimen/text_size18" />

            <TextView
                android:id="@+id/contact"
                style="@style/list_right_text"
                android:textColor="@color/gray_AFAFAF"
                android:textSize="@dimen/text_size18"
                tools:text="车架号" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/location_area"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cell_size40"
            android:orientation="horizontal">

            <TextView
                style="@style/list_left_text"
                android:layout_width="80dp"
                android:text="仓库位置"
                android:textSize="@dimen/text_size18" />

            <TextView
                android:id="@+id/location"
                style="@style/list_right_text"
                android:textColor="@color/gray_AFAFAF"
                android:textSize="@dimen/text_size18"
                tools:text="车架号" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/order_area"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cell_size40"
            android:orientation="horizontal">

            <TextView
                style="@style/list_left_text"
                android:layout_width="80dp"
                android:text="调拨单号"
                android:textSize="@dimen/text_size18" />

            <TextView
                android:id="@+id/order_number"
                style="@style/list_right_text"
                android:textColor="@color/gray_AFAFAF"
                android:textSize="@dimen/text_size18"
                tools:text="329423942" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/cell_size40"
            android:orientation="horizontal">

            <TextView
                style="@style/list_left_text"
                android:layout_width="120dp"
                android:text="预计到库时间"
                android:textSize="@dimen/text_size18" />

            <TextView
                android:id="@+id/array_date"
                style="@style/list_right_text"
                android:textColor="@color/gray_AFAFAF"
                android:textSize="@dimen/text_size18"
                tools:text="329423942" />
        </LinearLayout>

        <View
            style="@style/bottom_line"/>
        
        <TextView
            android:id="@+id/button"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/common_margin10"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_blue_shape"
            android:text="入库"
            android:gravity="center"
            android:textColor="@color/blue_6C94F7"
            android:textSize="@dimen/text_size17"/>


    </LinearLayout>
</layout>