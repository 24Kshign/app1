<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bg_grey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="107dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/pay_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textColor="@color/blue_6C94F7"
                tools:text="￥800.00" />
            <TextView
                android:id="@+id/order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textColor="@color/gray_AFAFAF"
                tools:text="sfljsdlfkjsdlfkdskf"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="请选择支付方式"
            android:layout_marginTop="10dp"
            android:textSize="11dp"
            android:gravity="center_vertical"
            android:textColor="@color/gray_AFAFAF"
            android:paddingLeft="8dp"
            android:background="@color/white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_E7E7E7"/>

        <RelativeLayout
            android:id="@+id/online_area"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="8dp">
            
            <ImageView
                android:id="@+id/icon1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_zhifubao"/>

            <TextView
                android:layout_toRightOf="@id/icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textSize="@dimen/text_size13"
                android:textColor="@color/black_373737"
                android:text="支付宝支付"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/right_arrow"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"/>
            
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_E7E7E7"/>

        <RelativeLayout
            android:id="@+id/offline_area"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="8dp">

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_weixin"/>

            <TextView
                android:layout_toRightOf="@id/icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textSize="@dimen/text_size13"
                android:textColor="@color/black_373737"
                android:text="微信支付"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/right_arrow"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"/>

        </RelativeLayout>

    </LinearLayout>
</layout>
