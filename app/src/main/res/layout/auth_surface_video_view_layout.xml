<?xml version="1.0" encoding="utf-8"?>
<!-- 可以修改为 merge -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/surface_video_container"
    android:layout_width="match_parent"
    android:layout_height="250dp">

    <com.maihaoche.volvo.view.videoView.SurfaceVideoView
        android:id="@+id/surface_video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <ImageView
        android:id="@+id/surface_video_screenshot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <Button
        android:id="@+id/surface_video_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:background="@drawable/auth_ic_play_24dp"/>

    <com.maihaoche.volvo.view.videoView.LoadingCircleView
        android:id="@+id/surface_video_progress"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>