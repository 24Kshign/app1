<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_grey"
        android:orientation="vertical">

        <TextView
            android:id="@+id/add_lable"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cell_size60"
            android:text="创建仓库位置"
            android:drawableLeft="@drawable/add_lable_icon"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/common_margin10"
            android:drawablePadding="5dp"
            android:textSize="@dimen/text_size16"
            android:textColor="@color/blue_6C94F7"
            android:background="@color/white"/>

        <View
            style="@style/bottom_line"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>


</layout>
