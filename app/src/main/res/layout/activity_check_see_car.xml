<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_grey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_margin="10dp">

            <TextView
                android:text="看车码"
                android:textSize="@dimen/text_size18"
                android:textColor="@color/black_373737"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:text="请输入6位数看车码"
                android:textSize="14dp"
                android:textColor="@color/gray_AFAFAF"
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"/>

            <com.maihaoche.volvo.view.textView.VerifyCodeView
                android:id="@+id/check_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cell_size60"
                android:layout_marginTop="@dimen/cell_size40"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"/>

        </LinearLayout>



    </FrameLayout>
</layout>
