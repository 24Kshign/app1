<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/big_margin15"
        android:paddingBottom="@dimen/big_margin15"
        android:background="@color/white"
        android:paddingLeft="@dimen/common_padding10"
        android:paddingRight="@dimen/common_padding10"
        >
        <include
            layout="@layout/item_car_attr"
            android:id="@+id/out_time"
            />
        <include
            layout="@layout/item_car_attr"
            android:id="@+id/operator_name"
            />
        <include
            layout="@layout/item_car_attr"
            android:id="@+id/fee_service"
            />

        <LinearLayout
            android:id="@+id/img_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/common_padding10"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:id="@+id/img_entrustmentLetter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_arrow_up"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提车委托函"
                    android:layout_marginTop="@dimen/common_margin10"
                    android:textSize="@dimen/text_size17"
                    android:textColor="@color/black_626262"
                    />

            </LinearLayout>

            <View
                android:layout_width="@dimen/common_margin10"
                android:layout_height="1dp"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:id="@+id/img_deliveryOrder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_arrow_up"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交车单"
                    android:layout_marginTop="@dimen/common_margin10"
                    android:textSize="@dimen/text_size17"
                    android:textColor="@color/black_626262"
                    />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</layout>
