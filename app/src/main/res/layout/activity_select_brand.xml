<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_grey"/>

        <com.maihaoche.volvo.view.IndexView
            android:id="@+id/index_brand"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            app:indexSelectTextColor="#88FF8903"
            app:indexTextColor="@color/gray_AFAFAF"
            app:indexTextSize="10dp"
            app:indexTouchedColor="@color/black_373737"
            app:indexTouchedSelectColor="@color/orange_88FF8903"/>

    </FrameLayout>

</layout>