<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_grey"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="202dp"
            android:background="@color/white"
            android:orientation="vertical">

            <EditText
                android:id="@+id/remark"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="top|left"
                android:hint="请输入备注，最多不超过50字"
                android:padding="@dimen/big_padding20"
                android:textColor="@color/black_373737"
                android:textColorHint="@color/gray_AFAFAF"
                android:textSize="@dimen/text_size18" />

            <TextView
                android:id="@+id/text_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_margin10"
                android:gravity="end"
                android:paddingBottom="@dimen/common_padding10"
                android:text="0/50"
                android:textColor="@color/gray_AFAFAF"
                android:textSize="@dimen/text_size18" />
        </LinearLayout>

        <Button
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cell_size60"
            android:layout_marginTop="@dimen/big1_margin20"
            android:background="@drawable/button_selector"
            android:text="保存"
            android:layout_marginRight="@dimen/big1_margin20"
            android:layout_marginLeft="@dimen/big1_margin20"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size21" />

    </LinearLayout>
</layout>
