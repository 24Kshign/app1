<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_6C94F7</item>
        <item name="colorPrimaryDark">@color/blue_6C94F7</item>
        <item name="colorAccent">@color/blue_6C94F7</item>
        <item name="android:textColorPrimary">@color/black_626262</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="LauncherTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/launcher_background</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="mycheckbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
        <!--<inamename="android:paddingLeft">10.0dip</item>-->
        <!--<inamename="android:height">35.0dip</item>-->
    </style>

    <style name="outstorageCheckbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/outstorage_checkbox_selector</item>
        <!--<inamename="android:paddingLeft">10.0dip</item>-->
        <!--<inamename="android:height">35.0dip</item>-->
    </style>

    <style name="default_value_check" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/check_box_bk</item>
        <!--<inamename="android:paddingLeft">10.0dip</item>-->
        <!--<inamename="android:height">35.0dip</item>-->
    </style>

    <style name="bottom_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.3dp</item>
        <item name="android:background">@color/gray_E7E7E7</item>
    </style>
    <!--主界面textView-->

    <!--列表左侧名称（车辆详情）-->
    <style name="list_left_text">
        <item name="android:layout_width">66dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size16</item>
        <item name="android:textColor">@color/gray_AFAFAF</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/common_margin10</item>
    </style>

    <!--列表右侧内容（车辆详情）-->
    <style name="list_right_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size16</item>
        <item name="android:textColor">@color/black_373737</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">@dimen/common_margin10</item>
        <item name="android:layout_marginLeft">@dimen/common_margin10</item>
    </style>

    <!--确认按钮-->
    <style name="sure_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/cell_size60</item>
        <item name="android:textSize">@dimen/text_size21</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:layout_marginTop">@dimen/big1_margin20</item>
        <item name="android:layout_marginRight">@dimen/common_margin10</item>
        <item name="android:layout_marginLeft">@dimen/common_margin10</item>
    </style>

    <style name="progressBar" parent="android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_drawable</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:minHeight">3dp</item>
        <item name="android:maxHeight">3dp</item>
    </style>

    <style name="radio_button">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/radio_button_text_select</item>
        <item name="android:gravity">center</item>
        <item name="android:checked">false</item>
        <item name="android:layout_marginRight">@dimen/common_margin10</item>
        <item name="android:background">@drawable/radio_button_select</item>
    </style>

    <style name="mProgress_circle_1">
        <item name="android:indeterminate">false</item>
        <item name="android:indeterminateDrawable">@drawable/progressbar_circle_1</item>
        <item name="android:minWidth">23dp</item>
        <item name="android:minHeight">23dp</item>
        <item name="android:maxWidth">23dp</item>
        <item name="android:maxHeight">23dp</item>
    </style>

    <style name="mProgress_circle_0">
        <item name="android:indeterminate">false</item>
        <item name="android:indeterminateDrawable">@drawable/progressbar_circle_0</item>
        <item name="android:minWidth">33dp</item>
        <item name="android:minHeight">33dp</item>
        <item name="android:maxWidth">33dp</item>
        <item name="android:maxHeight">33dp</item>
    </style>

    <style name="headerText">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">#AFAFAF</item>
        <item name="android:textSize">@dimen/font_header_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">1px</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <!--不在底部的按钮-->

    <style name="anim_slide_share_from_bottom">
        <item name="android:windowEnterAnimation">@anim/slide_share_from_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/slide_share_from_bottom_out</item>
    </style>

    <style name="help_q_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_373737</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <style name="help_a_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/black_373737</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="help_a_next_text">
        <item name="android:drawableLeft">@drawable/help_arrow_grey</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black_373737</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--需要背景为白色的分割线,适用于ImageView-->
    <style name="bottom_line_marginLeft_iv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:src">@color/gray_E7E7E7</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="textview_style">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">41dp</item>
        <item name="android:background">@color/transparent2</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black_373737</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TransparentToolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support Library compability -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="TranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">false</item>
        <item name="android:windowTranslucentNavigation" tools:ignore="NewApi">true</item>
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/transparent</item>
    </style>

</resources>
