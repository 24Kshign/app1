<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/result_dialog_bg"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#6c94f7">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/back_btn"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="识别结果"
            android:textColor="@color/white"
            android:textSize="19dp"/>
    </RelativeLayout>


    <ImageView
        android:id="@+id/result_iv"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        tools:background="#000000"
        />


    <EditText
        android:id="@+id/result_vin_et"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:cursorVisible="true"
        android:singleLine="true"
        android:textColor="#373737"
        android:textCursorDrawable="@null"
        android:textSize="21dp"
        tools:text="JTEBU3FJ8GK110478"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_margin="10dp"
        android:background="@color/grey"/>

    <ListView
        android:id="@+id/result_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:divider="@null"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f4f5f7"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/retry_tv"
            android:layout_width="107dp"
            android:layout_height="54dp"
            android:background="@drawable/blue_stoke_white_solid_bg"
            android:gravity="center"
            android:text="重新识别"
            android:textColor="@color/blue"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/result_confirm_tv"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/blue_btn_bg"
            android:gravity="center"
            android:letterSpacing="0.04"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="20dp"/>
    </LinearLayout>

</LinearLayout>