<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--列表右侧内容（车辆详情）-->
    <style name="RecyclerViewBaseStyle">
        <item name="android:scrollbars">none</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="NormalDialogStyle" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="mProgress_circle_1">
        <item name="android:indeterminate">false</item>
        <item name="android:indeterminateDrawable">@drawable/progressbar_circle_1</item>
        <item name="android:minWidth">23dp</item>
        <item name="android:minHeight">23dp</item>
        <item name="android:maxWidth">23dp</item>
        <item name="android:maxHeight">23dp</item>
    </style>

    <style name="mProgress_circle_0">
        <item name="android:indeterminate">false</item>
        <item name="android:indeterminateDrawable">@drawable/progressbar_circle_0</item>
        <item name="android:minWidth">33dp</item>
        <item name="android:minHeight">33dp</item>
        <item name="android:maxWidth">33dp</item>
        <item name="android:maxHeight">33dp</item>
    </style>
</resources>