<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_big20"
        android:paddingRight="@dimen/margin_big20"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_white_corner3"
            android:minWidth="200dp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_big20"
            android:paddingLeft="@dimen/margin_big20"
            android:paddingRight="@dimen/margin_big20"
            android:paddingTop="@dimen/margin_big20"
            >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:textColor="@color/black_626262"
                android:textSize="20dp"
                tools:text="标题"
                />


            <FrameLayout
                android:id="@+id/progress_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_big20"
                >

                <ImageView
                    android:id="@+id/progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:src="@drawable/spinner"/>
            </FrameLayout>

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="14dp"
                android:textColor="@color/black_373737"
                android:textSize="20dp"
                tools:text="内容"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                >

                <TextView
                    android:id="@+id/single_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="确定"
                    android:textColor="@color/blue_6B93F6"
                    android:textSize="20dp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    >

                    <TextView
                        android:id="@+id/cancel_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="取消"
                        android:textColor="@color/blue_6B93F6"
                        android:textSize="20dp"
                        />

                    <TextView
                        android:id="@+id/confirm_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_big20"
                        android:text="确定"
                        android:textColor="@color/blue_6B93F6"
                        android:textSize="20dp"
                        />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </FrameLayout>
</layout>
